  "dependencies": {
    "@react-navigation/native": "^6.1.6",
    "@types/react": "~18.0.27",
    "expo": "~48.0.4",
    "expo-status-bar": "~1.4.4",
    "jest": "^29.2.1",
    "jest-expo": "^48.0.1",
    "nativewind": "^2.0.11",
    "react": "18.2.0",
    "react-native": "0.71.3",
    "react-test-renderer": "^18.2.0",
    "typescript": "^4.9.4"
